<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
		http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="002" author="ushakov">
        <createTable tableName="netology.ORDERS">
            <column name="id" type="integer" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="date" type="date"></column>
            <column name="customer_id" type="integer">
                <constraints foreignKeyName="customer_id" references="netology.customers(id)"/>
            </column>
            <column name="product_name" type="String"></column>
            <column name="amount" type="integer"></column>
        </createTable>
        <createIndex tableName="netology.ORDERS" indexName="index_idOrders">
            <column name="id"></column>
        </createIndex>
    </changeSet>

</databaseChangeLog>

